{
  "env": {
    "browser": true,
    "jest": true,
    "node": true
  },
  "extends": [
    "standard",
    "standard-jsx",
    "plugin:jest/recommended"
  ],
  "parser": "babel-eslint",
  "plugins": [
    "import",
    "jest"
  ],
  "rules": {
    "complexity": ["warn", 12],
    "import/order": ["warn", {
      "newlines-between": "always"
    }],
    "object-curly-spacing": 0,
    "prefer-const": ["warn", {
      "destructuring": "all",
      "ignoreReadBeforeAssign": false
    }]
  },
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": true
    }
  }
}
